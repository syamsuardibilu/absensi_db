# ====== .env (DEVELOPMENT / LAN) ======
NODE_ENV=development
HOST=0.0.0.0
PORT=3000

# MySQL local (ubah sesuai kebutuhanmu)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASS=
DB_NAME=absensi_db

# CORS: same-origin tidak butuh ini, tapi tetap sediakan daftar tambahan
# (server CORS kita sudah mengizinkan seluruh private LAN: 10.x / 192.168.x / 172.16-31.x)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5500,https://daengbilu.com,https://www.daengbilu.com

# BASE_URL tidak perlu diisi untuk same-origin (biarkan kosong di dev).
# INTERNAL_BASE_URL dipakai server untuk self-fetch saat production (opsional di dev)
# BASE_URL=
# INTERNAL_BASE_URL=http://127.0.0.1:3000
